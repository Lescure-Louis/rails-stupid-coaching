<div class="answer">
  <h2>You: <%= params[:question] %></h2>
  <h2>Coach: <% if params[:question] == "I am going to work" %>
             <%= "Great!" %>
           <% elsif params[:question][-1] == "?" %>
                  <%= 'Silly question, get dressed and go to work!' %>
            <% else %>
            <%= 'I don\'t care, get dressed and go to work!' %>
      <% end %>
    </h2>
  <p><%= link_to "Ask another question", ask_path %></p>
</div>
